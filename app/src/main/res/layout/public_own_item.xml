<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/meeting_messagelayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/news_pic_hight"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/news_pic_hight"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/news_pic_hight"
            android:layout_weight="2"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="最初我们直系一位春天的到来时因为某些原因所导致的"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize32px" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/news_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACG"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize26px" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/login_card"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

    <com.coorchice.library.SuperTextView
        android:id="@+id/turn_online"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="上线"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize26px"
        app:corner="10dp"
        app:solid="@color/blue" />
        <com.coorchice.library.SuperTextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:id="@+id/turn_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="推送"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize26px"
            app:corner="10dp"
            app:solid="@color/blue" />
    </RelativeLayout>
</LinearLayout>
